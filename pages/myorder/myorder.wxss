page{
  background-color: #f6f6f6;
}
.section-txt{
  font-weight:bold;
  line-height: 80rpx;
  background-color: #fff;
  margin-right: 15rpx;
}
.section-txt button{
  margin-right: 15rpx;
  margin-top: 7rpx;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    position: relative;
    background-color: #fff;
    margin-bottom: 16rpx;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:160rpx;
    height:190rpx;    
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
    border-radius:15rpx;
}
.nav_section_items .section_cont{
    width:500rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}
